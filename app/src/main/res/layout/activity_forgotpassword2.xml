<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".forgotpassword2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/verifyforgotpwd"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_verifyphoneno"
            android:layout_marginStart="80dp"/>

        <TextView
            android:id="@+id/txtverifyfp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fraunces"
            android:padding="5dp"
            android:text="Verification"
            android:textColor="#A74AC7"
            android:textSize="38dp"
            android:textAllCaps="true"
            android:layout_marginTop="50sp"
            android:layout_marginStart="20dp"/>

        <com.chaos.view.PinView
            android:id="@+id/secondPinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:itemBackground="#f6dbff"
            app:cursorColor="#A74AC7"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            app:itemHeight="50dp"
            app:itemRadius="5dp"
            app:itemWidth="50dp"
            app:lineColor="#A74AC7"
            app:lineWidth="1dp" />

        <Button
            android:id="@+id/btnverify"
            android:layout_width="257dp"
            android:layout_height="65dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#A74AC7"
            android:text="Verify Code"
            android:onClick="otpfp"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>