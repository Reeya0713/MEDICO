<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".post"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emailimage"
            android:layout_width="114dp"
            android:layout_height="101dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/post" />

        <TextView
            android:id="@+id/posttxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fraunces"
            android:text="Post"
            android:textColor="#A74AC7"
            android:textSize="40sp"
            android:textAllCaps="true"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:hint="Email Id"
            android:id="@+id/mail_id"
            app:boxBackgroundColor="#f6dbff"
            android:layout_marginTop="40dp"
            app:boxStrokeColor="#A74AC7"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="#A74AC7"
            android:textColorHint="#A74AC7"
            android:cursorVisible="true"
            app:cursorColor="#A74AC7" >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:outlineAmbientShadowColor="#A74AC7"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:id="@+id/mail_sub"
            android:hint="Email Subject"
            app:boxBackgroundColor="#f6dbff"
            android:layout_marginTop="20dp"
            app:boxStrokeColor="#A74AC7"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="#A74AC7"
            android:textColorHint="#A74AC7"
            android:cursorVisible="true"
            app:cursorColor="#A74AC7" >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailSubject"
                android:outlineAmbientShadowColor="#A74AC7"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:id="@+id/mail_body"
            android:hint="Email Body"
            app:boxBackgroundColor="#f6dbff"
            android:layout_marginTop="20dp"
            app:boxStrokeColor="#A74AC7"
            app:boxStrokeWidthFocused="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="#A74AC7"
            android:textColorHint="#A74AC7"
            android:cursorVisible="true"
            app:cursorColor="#A74AC7" >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:outlineAmbientShadowColor="#A74AC7"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:backgroundTint="#A74AC7"
            android:text="Email"
            android:onClick="gmail"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>