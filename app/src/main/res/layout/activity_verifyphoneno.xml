<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".verifyphoneno">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/verifyphoneno"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/ic_verifyphoneno"
            android:layout_marginStart="80dp"/>

        <TextView
            android:id="@+id/txtverifyno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/croissant_one"
            android:padding="5dp"
            android:text="Verify Your Phone Number"
            android:textColor="#A74AC7"
            android:textSize="40sp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="17dp"/>

        <com.chaos.view.PinView
            android:id="@+id/firstPinView"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:itemBackground="#f6dbff"
            app:cursorColor="#A74AC7"
            app:hideLineWhenFilled="true"
            app:itemCount="6"
            app:itemHeight="50dp"
            app:itemRadius="5dp"
            app:itemWidth="50dp"
            app:lineColor="#A74AC7"
            app:lineWidth="1dp" />

        <Button
            android:id="@+id/btnverifycode"
            android:layout_width="257dp"
            android:layout_height="65dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#A74AC7"
            android:text="Verify Code"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/progrbarverify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:indeterminateTint="#f6dbff"/>


    </LinearLayout>

</ScrollView>